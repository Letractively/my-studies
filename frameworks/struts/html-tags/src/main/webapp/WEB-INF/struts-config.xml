<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
 
<struts-config>
 
    <form-beans>
        <form-bean name="HTMLTagsForm" type="br.com.mystudies.struts.htmltags.HTMLTagsForm"/>
    </form-beans>
 
    <action-mappings>
        <action path="/htmltags"
        	parameter="method" 
        	type="br.com.mystudies.struts.htmltags.HTMLTagsAction" 
        	name="HTMLTagsForm"
        	scope="request"
        	input="html-tags.jsp"
        	>
        </action>
    </action-mappings>
    
    
    
    
</struts-config>