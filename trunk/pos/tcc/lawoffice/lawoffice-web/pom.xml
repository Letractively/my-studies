<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>lawoffice</artifactId>
    <groupId>br.com</groupId>
    <version>1.0</version>
  </parent>
  <groupId>br.com</groupId>
  <artifactId>lawoffice-web</artifactId>
  <version>1.0</version>
  <packaging>war</packaging>
  <name>lawoffice-web</name>
  <url>http://maven.apache.org</url>
  <repositories>
  </repositories>
  <dependencies>
  	<dependency>
  		<groupId>br.com</groupId>
  		<artifactId>lawoffice-dominio</artifactId>
  		<version>1.0</version>
  		<type>jar</type>
  		<scope>provided</scope>
  	</dependency>
  	<dependency>
  		<groupId>br.com</groupId>
  		<artifactId>lawoffice-custas</artifactId>
  		<version>1.0</version>
  		<type>ejb</type>
  		<scope>provided</scope>
  	</dependency>
  	<dependency>
  		<groupId>javax</groupId>
  		<artifactId>javaee-api</artifactId>
  		<version>6.0</version>
  		<type>jar</type>
  		<scope>provided</scope>
  	</dependency>
  	<dependency>
  		<groupId>br.com</groupId>
  		<artifactId>lawoffice-dados</artifactId>
  		<version>1.0</version>
  		<type>ejb</type>
  		<scope>provided</scope>
  	</dependency>
  </dependencies>
  <build>
    <finalName>lawoffice</finalName>
    <plugins>
    	<plugin>
    		<groupId>org.apache.maven.plugins</groupId>
    		<artifactId>maven-eclipse-plugin</artifactId>
    		<version>2.8</version>
    		<configuration>
    			<additionalProjectFacets>
    			    <jst.jsf>2.0</jst.jsf>
    			</additionalProjectFacets>
    		</configuration>
    	</plugin>
    	<plugin>
    		<groupId>org.codehaus.mojo</groupId>
    		<artifactId>jboss-maven-plugin</artifactId>
    		<version>1.4.1</version>
    		<configuration>
    			<jbossHome>/opt/app/jboss-6.0.0.20100911-M5</jbossHome>
          		<serverName>lawoffice</serverName>
          		<fileName>target/lawoffice.war</fileName>    			
    		</configuration>
    	</plugin>
    </plugins>
  </build>
</project>
