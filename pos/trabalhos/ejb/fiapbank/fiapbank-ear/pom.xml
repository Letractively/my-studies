<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
        <artifactId>fiapbank</artifactId>
        <groupId>br.com</groupId>
        <version>1.0</version>
    </parent>
  <groupId>br.com</groupId>
  <artifactId>fiapbank-ear</artifactId>
  <packaging>ear</packaging>
  <version>1.0</version>
  <name>fiapbank-ear</name>
  <url>http://maven.apache.org</url>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
            <version>5</version>
            <defaultLibBundleDir>lib</defaultLibBundleDir>
            <applicationXml>${basedir}/target/application.xml</applicationXml>
          	<earSourceDirectory>EarContent</earSourceDirectory>            
		  <modules>
             <webModule>
               <groupId>br.com</groupId>
               <artifactId>fiapbank-web</artifactId>
               <contextRoot>/fiapbank</contextRoot>
             </webModule>
             <ejbModule>
             	<groupId>br.com</groupId>
               <artifactId>fiapbank-contas</artifactId>
             </ejbModule>
             <ejbModule>
             	<groupId>br.com</groupId>
               <artifactId>fiapbank-dominio</artifactId>
             </ejbModule>                                                    
	    </modules>        
        </configuration>
      </plugin>
      <plugin>
      	<groupId>org.codehaus.mojo</groupId>
      	<artifactId>jboss-maven-plugin</artifactId>
      	<version>1.4</version>
      	<configuration>
      		<jbossHome>/opt/app/jboss-5.1.0.GA</jbossHome>
      		<serverName>fiapbank</serverName>
      		<fileName>target/fiapbank-ear.ear</fileName>
      	</configuration>
      </plugin>
    </plugins>
    <finalName>fiapbank-ear</finalName>
  </build>
  <dependencies>
  	<dependency>
  		<groupId>br.com</groupId>
  		<artifactId>fiapbank-contas</artifactId>
  		<version>1.0</version>
  		<type>ejb</type>
  		<scope>compile</scope>
  	</dependency>
  	<dependency>
  		<groupId>br.com</groupId>
  		<artifactId>fiapbank-dominio</artifactId>
  		<version>1.0</version>
  		<type>ejb</type>
  		<scope>compile</scope>
  	</dependency>
  	<dependency>
  		<groupId>br.com</groupId>
  		<artifactId>fiapbank-web</artifactId>
  		<version>1.0</version>
  		<type>war</type>
  		<scope>compile</scope>
  	</dependency>
  	<dependency>
  		<groupId>br.com</groupId>
  		<artifactId>fiapbank-creditos</artifactId>
  		<version>1.0</version>
  		<type>ejb</type>
  		<scope>compile</scope>
  	</dependency>
  </dependencies>
	
</project>
